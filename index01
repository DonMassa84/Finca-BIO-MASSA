  </main>  <footer class="container mt-10">
    <p class="text-sm">© 2025 MASSA | Generiert aus DOCX.</p>
  </footer>  <dialog id="lightbox">
    <div class="lb-head">
      <strong id="lb-title">Foto</strong>
      <div class="nav">
        <button class="lb-btn" id="prevBtn" aria-label="Vorheriges Bild">◀</button>
        <button class="lb-btn" id="nextBtn" aria-label="Nächstes Bild">▶</button>
        <button class="lb-btn" id="closeBtn" aria-label="Schließen">×</button>
      </div>
    </div>
    <div class="lb-body lightbox">
      <img id="lb-img" alt="Vorschau" />
    </div>
  </dialog>  <script>
    // Placeholder: images will be inlined when exporting. For canvas preview, keep empty.
    window.__IMGS = [];

    const galleryEl = document.getElementById('gallery');
    function renderGallery() {
      if (!window.__IMGS.length) {
        galleryEl.innerHTML = '<p>Keine eingebetteten Bilder im Dokument gefunden.</p>';
        return;
      }
      galleryEl.innerHTML = window.__IMGS.map((src, i) => `
        <figure class="group relative cursor-zoom-in" data-index="${i}">
          <img alt="Foto ${i+1}" loading="lazy" src="${src}" class="w-full h-64 object-cover rounded-xl shadow" />
          <figcaption class="mt-2 text-sm text-gray-700">Foto ${i+1}</figcaption>
          <div class="absolute inset-0 ring-1 ring-black/5 rounded-xl group-hover:ring-2"></div>
        </figure>
      `).join('');
      attachHandlers();
    }

    function attachHandlers(){
      const figures = Array.from(document.querySelectorAll('#gallery figure'));
      const dialog = document.getElementById('lightbox');
      const lbImg = document.getElementById('lb-img');
      const lbTitle = document.getElementById('lb-title');
      const prevBtn = document.getElementById('prevBtn');
      const nextBtn = document.getElementById('nextBtn');
      const closeBtn = document.getElementById('closeBtn');
      let idx = 0;

      function show(i) {
        idx = (i + figures.length) % figures.length;
        const fig = figures[idx];
        const img = fig.querySelector('img');
        lbImg.src = img.src;
        lbTitle.textContent = fig.querySelector('figcaption')?.textContent || 'Foto';
        if (!dialog.open) dialog.showModal();
      }

      figures.forEach((fig, i) => {
        fig.addEventListener('click', () => show(i));
      });

      prevBtn.addEventListener('click', () => show(idx - 1));
      nextBtn.addEventListener('click', () => show(idx + 1));
      closeBtn.addEventListener('click', () => dialog.close());
      dialog.addEventListener('click', (e) => { if (e.target === dialog) dialog.close(); });
      document.addEventListener('keydown', (e) => {
        if (!dialog.open) return;
        if (e.key === 'ArrowLeft') show(idx - 1);
        if (e.key === 'ArrowRight') show(idx + 1);
        if (e.key === 'Escape') dialog.close();
      });
    }

    renderGallery();
  </script></body>
